# Environment Configuration for Transfermarkt API
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4

# API Configuration
API_TITLE=Transfermarkt API
API_VERSION=1.0.0
API_DESCRIPTION=FastAPI for Transfermarkt data scraping - APEX-ML v4.0 Integration

# Database (if needed in future)
DATABASE_URL=sqlite:///./transfermarkt.db

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=3600
CACHE_TYPE=memory

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Transfermarkt Configuration
TRANSFERMARKT_BASE_URL=https://www.transfermarkt.com
TRANSFERMARKT_TIMEOUT=30
TRANSFERMARKT_RETRIES=3

# APEX-ML Integration
APEX_ML_ENABLED=True
APEX_ML_VERSION=4.0

# Google Cloud Configuration
GCP_PROJECT_ID=apex-ml-transfermarkt
GCP_REGION=us-central1

# Security
ALLOW_ORIGINS=*
ALLOW_CREDENTIALS=True
ALLOW_METHODS=GET,POST,OPTIONS
ALLOW_HEADERS=*

# Monitoring & Logging
SENTRY_DSN=
MONITORING_ENABLED=False

# Feature Flags
FEATURE_WEB_SCRAPING=False
FEATURE_CACHING=True
FEATURE_RATE_LIMITING=True
